{
  "name": "sanity-typed-schema",
  "version": "0.1.0",
  "type": "module",
  "description": "Type inference for the output of a Sanity schema, from the schema itself",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src test",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm test:types && npm run lint",
    "preversion": "npm run lint",
    "test": "vitest",
    "test:types": "vitest typecheck",
    "version": "npm run format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:BSantos22/sanity-typed-schema.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "sanity",
    "typescript"
  ],
  "author": "Bruno Santos",
  "license": "MIT",
  "files": [
    "lib/src/**/*"
  ],
  "devDependencies": {
    "@portabletext/types": "^2.0.5",
    "@sanity/types": "^3.14.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "type-fest": "^3.9.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  }
}
